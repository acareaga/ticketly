<div class="container">
  <div class="row">
    <div class="col s12 m5">
      <div class="center">
        <h2><%= @event.name %></h2>
        <p><%= @event.venue %></p>
        <p><%= "#{@event.location_city}, #{@event.location_state}" %></p>
        <p> <%= @event.date_time.strftime('%B %-d, %Y - %H:00') %></p>
        <div class='map-container'>
          <div id="map" class='map' data-lat="<%= @event.latitude %>" data-lon="<%= @event.longitude %>"></div>
        </div>
      </div>
    </div>
    <div class="col s12 m7">
      <div class="events-table-wrapper">
        <table class="bordered events-table">
          <thead>
            <tr>
              <th>Ticket ID</th>
              <th>Section</th>
              <th>Row</th>
              <th>Seat</th>
              <th>Price</th>
              <th class="center">Purchase</th>
            </tr>
          </thead>
          <tbody></tbody>
          <% if @event.tickets.active.empty? %>
            <tr>
              <td class="center" colspan="6">No Tickets Available at this time.</td>
            </tr>
          <% else %>
            <% @event.tickets.active.each do |ticket| %>
              <tr id="<%= ticket.id %>">
                <td>
                  <%= ticket.id %>
                </td>
                <td>
                  <%= ticket.section %>
                </td>
                <td>
                  <%= ticket.row %>
                </td>
                <td>
                  <%= ticket.seat %>
                </td>
                <td>
                  <%= "$#{ticket.price}" %>
                </td>
                <%= form_tag(cart_tickets_path(ticket_id: ticket.id)) do %>
                  <td class="center">
                    <%= button_tag "Purchase", class: "waves-effect btn orange" %>
                  </td>
                <% end %>
              </tr>
            <% end %>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>

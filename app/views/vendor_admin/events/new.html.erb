<div class="container">
  <div class="row">
    <div class="col s12 m6 offset-m3">
      <h4>Create New Event</h4>
      <%= form_for(@event, url: vendor_events_path) do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <%= f.label :description %>
        <%= f.text_field :description %>
        <%= f.label :venue %>
        <%= f.text_field :venue %>
        <%= f.label :location_city, "City" %>
        <%= f.text_field :location_city %>
        <%= f.label :location_state, "State" %>
        <%= f.text_field :location_state %>
        <%= f.label :street_address, "Street Address" %>
        <%= f.text_field :street_address %>
        <%= f.label :date_time, "Date" %>
        <%= f.text_field :date_time %>
        <%= f.collection_select :category_id, Category.all, :id, :name, { prompt: "Choose a category" }, class: "browser-default" %>
        <br>
        <%= f.button "Create Event", class: 'waves-light waves-effect btn orange' %>

      <%end %>
    </div>
  </div>
</div>

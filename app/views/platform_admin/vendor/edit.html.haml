.container
  .row
    %h1.black-text.center-align Update #{@vendor.name}
    .col.s12.m6.offset-m3.black-text
      = form_for(@vendor, url: platform_admin_vendor_path) do |f|
        = f.label :name
        = f.text_field :name
        = f.label :status
        = f.select :status, Vendor.statuses.keys, {}, {class: "browser-default"}
        %br
        = f.button "Update Vendor", class: 'waves-effect waves-light orange btn'

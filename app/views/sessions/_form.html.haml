.container
  .row
    .col.s12.m6.offset-m3.black-text
      %h5.black-text Login to Your Account
      = form_for(:session, url: login_path) do |f|
        .input-field
          = f.label :username
          = f.text_field :username
        .input-field
          = f.label :password
          = f.password_field :password
          %br
          %br
          = f.button "Login", class: "waves-effect waves-light btn orange"

<div class="container">
  <div class="row">
    <div class="black-text col s12 m6 offset-m3">
      <h3 class="center">Edit Account</h3>

      <%= form_tag user_path, :method => :put, :multipart => true do %>

        <%= label_tag :name %>
        <%= text_field_tag :name, @user.name%>

        <%= label_tag :email %>
        <%= text_field_tag :email, @user.email %>

        <%= label_tag :username %>
        <%= text_field_tag :username, @user.username %>

        <%= label_tag :password %>
        <%= password_field_tag :password, @user.password %>

        <% if current_vendor? %>
          <input type="checkbox" name="role" id="role" value="1" checked="checked" disabled="disabled"/>
          <%= label_tag(:role, "Sign up as a Vendor", checked: "checked", disabled: true) %>
        <% else %>
          <%= check_box_tag(:role) %>
          <%= label_tag(:role, "Become a Vendor") %>
        <% end %>
        <br/>
        <br/>
        <%= file_field_tag :image %>

        <br/>
        <%= button_tag "Update Account", class: "waves-effect waves-light btn orange" %>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <% if current_user %>
    <%= render partial: "shared/already_logged_in" %>
  <% end %>
  <% if !current_user %>
    <br/>
    <div class="row">
      <div class="col s12 m6 offset-m3 black-text">
        <h5 class="black-text">Create Account</h5>

        <%= form_tag '/users#create', method: :update, :multipart => true do %>
          <div class="input-field">
            <%= label_tag :name %>
            <%= text_field_tag :name %>
          </div>
          <div class="input-field">
            <%= label_tag :username %>
            <%= text_field_tag :username %>
          </div>
          <div class="input-field">
            <%= label_tag :password %>
            <%= password_field_tag :password %>
          </div>
          <div class="input-field">
            <%= check_box_tag(:role) %>
            <%= label_tag(:role, "Sign up as a Vendor") %>
          </div>
          <div class="input-field">
            <%= file_field_tag :image %>
          </div>
          <div class="input-field">
            <%= button_tag "Create Account", class: "waves-effect waves-light btn orange" %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

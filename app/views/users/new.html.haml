- if current_user
  = render partial: "shared/already_logged_in"
- if !current_user
  %br
  %h3 Create Account
  .row
    .col.s6.black-text
      = form_for @new_user do |f|
        .input-field
          = f.label :username
          = f.text_field :username
        %br
        .input-field
          = f.label :name
          = f.text_field :name
        %br
        .input-field
          = f.label :email
          = f.email_field :email
        %br
        .input-field
          = f.label :password
          = f.password_field :password
        %br
        .waves-effect.waves-light.btn
            = f.button "Create Account", class: "waves-effect waves-light btn orange"
